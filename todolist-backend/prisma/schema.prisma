datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

generator client {
  provider = "prisma-client-js"
}

// Define User model
model User {
  id       String @id @default(cuid()) @map("_id")
  name     String
  email    String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Define the opposite relation to Task
  tasks    Task[] // This line establishes the relation to Task model
}

// Define Task model
model Task {
  id          String @id @default(cuid()) @map("_id")
  userId      String
  title       String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Define the relationship to User
  user        User @relation(fields: [userId], references: [id])
}
